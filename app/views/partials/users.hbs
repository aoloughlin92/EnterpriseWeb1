<section class="ui raised segment">
    <div class="ui grid">
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>View</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td> {{firstName}} </td>
                        <td> {{lastName}} </td>
                        <td> {{email}}</td>
                        <td><a href="/viewUser/{{_id}}"  class="ui icon button"> <i class="icon folder open"></i></a></td>
                        <td><a href="/editUser/{{_id}}"  class="ui icon button"> <i class="icon edit"></i></a></td>
                        <td><a href="/deleteUser/{{_id}}"  class="ui icon button"> <i class="icon trash"></i></a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>
