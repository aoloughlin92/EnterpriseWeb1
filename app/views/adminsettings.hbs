{{> adminmenu _id="settings" }}

<section class="ui raised segment">
    <div class="ui grid">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                <form action="/adminsettings" method="POST">
                    <h3 class="ui header">Update</h3>
                    <div class="two fields">
                        <div class="field">
                            <label>First Name</label> <input value="{{admin.firstName}}" type="text" name="firstName">
                        </div>
                        <div class="field">
                            <label>Last Name</label> <input value="{{admin.lastName}}" type="text" name="lastName">
                        </div>
                    </div>
                    <div class="field">
                        <label>Email</label> <input value="{{admin.email}}" type="text" name="email">
                    </div>
                    <div class="field">
                        <label>Password</label> <input value="{{admin.password}}" type="password" name="password">
                    </div>
                    <button class="ui blue submit button">Save</button>
                </form>
                {{> error }}
            </div>
        </div>

    </div>
</section>
